<!DOCTYPE html>
<html lang="en">
  <!-- Include head particial -->
  <%- include('../../partials/head.ejs') %>
  <!-- Include head particial -->

  <body class="hold-transition sidebar-mini">
    <div class="wrapper">
      <!-- Navbar -->
      <%- include('../../partials/navbar') %>../
      <!-- /.navbar -->

      <!-- Main Sidebar Container -->
      <%- include('../../partials/main-sidebar.ejs') %>

      <!-- Content Wrapper. Contains page content -->
      <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <%- include('../../partials/content-header.ejs', {message: `Quản lý bài
        viết`}) %>
        <!-- /.content-header -->

        <!-- Main content -->
        <div class="content">
          <div class="container-fluid">
            <div class="row">
              <p class="pl-2">
                Count: <%= paginate.count %> - Page: <%= paginate.page %> / <%=
                paginate.pages %>
              </p>
              <div class="col-12">
                <div class="card">
                  <div class="card-header">
                    <h3 class="card-title">Danh sách bài viết</h3>

                    <div class="card-tools">
                      <div
                        class="input-group input-group-sm"
                        style="width: 150px"
                      >
                        <input
                          type="text"
                          name="table_search"
                          class="form-control float-right"
                          placeholder="Search"
                        />

                        <div class="input-group-append">
                          <button type="submit" class="btn btn-default">
                            <i class="fas fa-search"></i>
                          </button>
                        </div>
                      </div>
                    </div>
                  </div>
                  <!-- /.card-header -->

                  <div class="card-body table-responsive p-0">
                    <table class="table table-hover text-nowrap">
                      <thead>
                        <tr>
                          <th style="width: 10px">STT</th>
                          <th>Chủ đề</th>
                          <th>Tiêu đề</th>
                          <th>Tác giả</th>
                          <th>Ngày đăng</th>
                          <th style="text-align: center" class="pl-0 pr-0">
                            Sửa
                          </th>
                          <th style="text-align: center" class="pl-0">Xoá</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% posts.forEach((post, index) => { %>
                        <tr>
                          <td style="text-align: center"><%= ++index %></td>
                          <td><%= post.topic.topic_name %></td>
                          <td
                            style="
                              max-width: 250px;
                              overflow: hidden;
                              text-overflow: ellipsis;
                              white-space: nowrap; ;
                            "
                          >
                            <%= post.post_title %>
                          </td>
                          <td>
                            <span class="tag tag-success"
                              ><%= post.author.name %>
                            </span>
                          </td>
                          <td><%= post.post_date %></td>
                          <td style="text-align: center">
                            <a href="/admin/post-edit?id=<%= post._id %>">
                              <i
                                class="far fa-edit"
                                style="cursor: pointer; color: red"
                              ></i>
                            </a>
                          </td>
                          <td style="text-align: center">
                            <a
                              onclick="return confirm('Bạn có chắc hành động xoá, thao tác này không thể hoàn tác?')"
                              href="/admin/post-delete?id=<%= post._id %>"
                            >
                              <i
                                class="far fa-trash-alt"
                                style="cursor: pointer; color: rgb(87, 218, 0)"
                              ></i>
                            </a>
                          </td>
                        </tr>
                        <% }) %>
                      </tbody>
                    </table>
                  </div>
                  <!-- /.card-body -->
                  <% if (posts.length < 0) { %>
                  <h6 class="p-4 text-center">
                    Chưa có bài viết.
                    <a href="/admin/post-add">Thêm bài viết.</a>
                  </h6>
                  <% } %>
                  <div class="card-footer">
                    <% if (paginate.page - 1 > 0) { %>
                    <a
                      href="http://localhost:3030/admin/post?page=<%= paginate.page - 1 %>&perpage=<%= paginate.perpage %>"
                      class="btn btn-primary btn-sm"
                    >
                      <i class="fas fa-chevron-left"></i>
                    </a>
                    <% } %> <% for( let index = 0; index < paginate.pages;
                    index++ ) { %>
                    <a
                      href="http://localhost:3030/admin/post?page=<%= index + 1 %>&perpage=<%= paginate.perpage %>"
                      class="pl-1 pr-1"
                      ><%= index + 1 %>
                    </a>
                    <% } %> <% if (paginate.page + 1 <= paginate.pages) { %>
                    <a
                      href="http://localhost:3030/admin/post?page=<%= paginate.page + 1 %>&perpage=<%= paginate.perpage %>"
                      class="btn btn-primary btn-sm"
                    >
                      <i class="fas fa-chevron-right"></i>
                    </a>
                    <% } %>
                  </div>
                </div>
                <!-- /.card -->
              </div>
            </div>
            <!-- /.row -->
          </div>
          <!-- /.container-fluid -->
        </div>
        <!-- /.content -->
      </div>
      <!-- /.content-wrapper -->

      <!-- Control Sidebar -->
      <%- include('../../partials/control-sidebar.ejs') %>
      <!-- /.control-sidebar -->

      <!-- Main Footer -->
      <%- include('../../partials/main-footer.ejs') %>
    </div>
    <!-- ./wrapper -->

    <!-- REQUIRED SCRIPTS -->

    <!-- jQuery -->
    <script src="../plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="../plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script src="../dist/js/adminlte.min.js"></script>
  </body>
</html>
